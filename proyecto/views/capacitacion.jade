.page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
  .wrapper.wrapper--w680
    .card.card-4
      .card-body
        h2.title Capacitacion
        form(action="/capacitacion",method="POST")
          .row.row-space
            .col-2
              .input-group
                label.label Persona
                .rs-select2.js-select-simple
                  select(name="cap_persona")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < personas.rowCount; ++i)
                      option=personas.rows[i].per_cedula
                  .select-dropdown
              .p-t-15

            .col-2
              .input-group
                label.label Institucion
                .rs-select2.js-select-simple
                  select(name="cap_institucion")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < instituciones.rowCount; ++i)
                      option=instituciones.rows[i].ins_nombre
                  .select-dropdown
              .p-t-15

          .row.row-space
            .col-2
              .input-group
                label.label Nombre del Curso
                input.input--style-4(type='text' name='cap_curso')
            .col-2
              .input-group
                label.label Descripcion
                input.input--style-4(type='text' name='cap_descripcion')

          .row.row-space
            .col-2
              .input-group
                label.label Horas de Duracion
                input.input--style-4(type='text' name='cap_horas')
            .col-2
              .input-group
                label.label Fecha de Realizacion
                .input-group-icon
                  input.input--style-4.js-datepicker(type='text' name='cap_fecha')
                  i.zmdi.zmdi-calendar-note.input-icon.js-btn-calendar

            button.btn.btn--radius-2.btn--blue(type='submit') Agregar
