                  input(type="text", name="apr_persona", placeholder="Cedula",id="apr_persona",class="form-control form-control-lg border-left-0") 

              div(class="form-group")
                  label(for="apr_periodo") Periodo
                  input(type="text", name="apr_periodo", placeholder="Periodo Apreciado",id="apr_periodo",class="form-control form-control-lg border-left-0")
                      

              div(class="form-group")
                  label(for="apr_solucion_problema") Solucion de Problemas
                  input(type="text", name="apr_solucion_problema", placeholder="Puntuacion",id="apr_solucion_problema",class="form-control form-control-lg border-left-0")
                      
              div(class="form-group")
                  label(for="apr_conoce_negocio") Conocimiento del Negocio
                  input(type="text", name="apr_conoce_negocio", placeholder="Puntuacion",id="apr_conoce_negocio",class="form-control form-control-lg border-left-0")

              div(class="form-group")
