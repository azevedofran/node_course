                  input(type="text", name="apr_liderazgo", placeholder="Puntuacion",id="apr_liderazgo",class="form-control form-control-lg border-left-0")
              
              div(class="form-group")
                  label(for="apr_auto_desarrollo") Autodesarrollo
                  input(type="text", name="apr_auto_desarrollo", placeholder="Puntuacion",id="apr_auto_desarrollo",class="form-control form-control-lg border-left-0")
              
              div(class="form-group")
                  label(for="apr_auto_motivacion") Automotivacion
                  input(type="text", name="apr_auto_motivacion", placeholder="Puntuacion",id="apr_auto_motivacion",class="form-control form-control-lg border-left-0")
              
              div(class="form-group")
                  label(for="apr_consolidado") Consolidado
                  input(type="text", name="apr_consolidado", placeholder="Puntuacion",id="apr_consolidado",class="form-control form-control-lg border-left-0")

              
              
              div
