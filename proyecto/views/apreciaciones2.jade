.page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
  .wrapper.wrapper--w680
    .card.card-4(style='width:110%;')
      .card-body
        h2.title(style='text-align: center; font-size:35px !important') Apreciacion
        form(action="/apreciaciones",method="POST")
          .row.row-space
            .col-2
              .input-group
                label.label Persona
                .rs-select2.js-select-simple
                  select(name="cedula")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < cuadros.rowCount; ++i)
                      option=cuadros.rows[i].per_cedula+' | '+cuadros.rows[i].per_nombre+' | '+cuadros.rows[i].per_apellido
                  .select-dropdown
                  
            .col-1
              .p-t-15
                 button.btn.btn--radius-2.btn--blue(type='Submit') Generar
 
            .row.row-space
              .col-6
                h1.title(style='margin-top: 5%;font-size:35px !important') Informacion Personal
                -for (var i = 0; i < personas.rowCount; ++i)
                  if(personas.rows[i].per_nombre2=null)
                     var segNombre="."
                  if(personas.rows[i].per_apellido2=null)
                     var segApellido="."  
                  label.label="Nombres y Apellidos: "+personas.rows[i].per_nombre+" "+segNombre+" "+personas.rows[i].per_apellido+" "+segApellido
                  label(style='text-align: left').label="C.I.: "+personas.rows[i].per_cedula
                  label(style='text-align: left').label="Correo: "+personas.rows[i].per_correo
                  label(style='text-align: left').label="Profesion: "+personas.rows[i].pro_profesion
            br      
            .row.row-space
              .col-6
                h1.title(style='margin-top: 15%;font-size:35px !important') Apreciacion
                -for (var i = 0; i < apreciaciones.rowCount; ++i)
                
                  label(style='text-align: center;margin-top: 10%;font-size:25px !important; background-color: #6589de;').label="Periodo: "+apreciaciones.rows[i].apr_periodo
                  label(style='text-align: left; margin-left:10%').label="Solucionar Problemas: "+apreciaciones.rows[i].apr_solucion_problema
                  label(style='text-align: left; margin-left:10%').label="Conocimiento del Negocio: "+apreciaciones.rows[i].apr_conoce_negocio
                  label(style='text-align: left; margin-left:10%').label="Habilidad Social: "+apreciaciones.rows[i].apr_habilidad_social
                  label(style='text-align: left; margin-left:10%').label="Liderazgo: "+apreciaciones.rows[i].apr_liderazgo
                  label(style='text-align: left; margin-left:10%').label="Autodesarrollo: "+apreciaciones.rows[i].apr_auto_desarrollo
                  label(style='text-align: left; margin-left:10%').label="Automotivacion: "+apreciaciones.rows[i].apr_auto_motivacion
                  label(style='text-align: left; margin-left:10%').label="Consolidado: "+apreciaciones.rows[i].apr_consolidado