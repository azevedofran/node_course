.page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
  .wrapper.wrapper--w680
    .card.card-4(style='width:110%;')
      .card-body
        h2.title Sintesis Curricular
        form(action="/apreciaciones",method="POST")
          .row.row-space
            .col-2
              .input-group
                label.label Persona
                .rs-select2.js-select-simple
                  select(name="cedula")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < cuadros.rowCount; ++i)
                      option=cuadros.rows[i].per_cedula+' | '+cuadros.rows[i].per_nombre+' | '+cuadros.rows[i].per_apellido
                  .select-dropdown
            .col-1
              .p-t-15
                 button.btn.btn--radius-2.btn--blue(type='Submit') Generar
 
            .row.row-space
              .col-2
              label.title Informacion Personal
                -for (var i = 0; i < personas.rowCount; ++i)
                  if(personas.rows[i].per_nombre2=null)
                     var segNombre="."
                  if(personas.rows[i].per_apellido2=null)
                     var segApellido="."  
                  label.label="Nombres y Apellidos: "+personas.rows[i].per_nombre+" "+segNombre+" "+personas.rows[i].per_apellido+" "+segApellido
                  label.label="C.I.: "+personas.rows[i].per_cedula
                  label.label="Correo: "+personas.rows[i].per_correo
                  label.label="Profesion: "+personas.rows[i].pro_profesion
                  
          .row.row-space
            .col-2
            label.title Apreciacion
              -for (var i = 0; i < apreciaciones.rowCount; ++i)
                label.label="Periodo: "+apreciaciones.rows[i].apr_periodo
                label.label="Solucionar Problemas: "+apreciaciones.rows[i].apr_solucion_problemas
                label.label="Conocimiento del Negocio: "+apreciaciones.rows[i].apr_conoce_negocio
                label.label="Habilidad Social: "+apreciaciones.rows[i].apr_habilidad_social
                label.label="Liderazgo: "+apreciaciones.rows[i].apr_liderazgo
                label.label="Autodesarrollo: "+apreciaciones.rows[i].apr_auto_desarrollo
                label.label="Automotivacion: "+apreciaciones.rows[i].apr_auto_motivacion
                label.label="Consolidado: "+apreciaciones.rows[i].apr_consolidado