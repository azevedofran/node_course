.page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
  .wrapper.wrapper--w680
    .card.card-4(style='width:110%;')
      .card-body
        h2.title Sintesis Curricular
        form(action="/curriculum",method="POST")
          .row.row-space
            .col-2
              .input-group
                label.label Persona
                .rs-select2.js-select-simple
                  select(name="cedula")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < personas.rowCount; ++i)
                      option=personas.rows[i].per_cedula+' | '+personas.rows[i].per_nombre+' | '+personas.rows[i].per_apellido
                  .select-dropdown
            .col-1
              .p-t-15
                 button.btn.btn--radius-2.btn--blue(type='Submit') Generar
 
          .row.row-space
            .col-6
            label(style='text-align: center;margin-top: 10%;font-size:25px !important; background-color: #6589de; width:100%').label Informacion Personal
            -for (var i = 0; i < cuadros.rowCount; ++i)
              label(style='text-align: left; margin-left:5%').label="Nombres y Apellidos: "+cuadros.rows[i].per_nombre+" "+cuadros.rows[i].per_apellido
              label(style='text-align: left; margin-left:5%').label="C.I.: "+cuadros.rows[i].per_cedula
              label(style='text-align: left; margin-left:5%').label="Estado Civil: "+cuadros.rows[i].per_edo_civil
              label(style='text-align: left; margin-left:5%').label="Correo: "+cuadros.rows[i].per_correo
              label(style='text-align: left; margin-left:5%').label="Fecha de Nacimiento: "+cuadros.rows[i].per_fecha_nacimiento.toLocaleString("en-GB").split(",",1)
              label(style='text-align: left; margin-left:5%').label="Profesion: "+cuadros.rows[i].pro_profesion
              -for (var i = 0; i < telefonos.rowCount; ++i)
                label(style='text-align: left; margin-left:5%').label="Telefono: ("+telefonos.rows[i].tel_cod_area+") "+telefonos.rows[i].tel_numero+" "+telefonos.rows[i].tel_tipo

          .row.row-space
            .col-6
            label(style='text-align: center;margin-top: 10%;font-size:25px !important; background-color: #6589de; width:100%;').label Educacion Formal
            -for (var i = 0; i < educaciones.rowCount; ++i)
              label(style='text-align: left; margin-left:5%').label="Universidad: "+educaciones.rows[i].uni_nombre
              label(style='text-align: left; margin-left:5%').label="Tipo Carrera: "+educaciones.rows[i].edu_tipo
              label(style='text-align: left; margin-left:5%').label="Carrera: "+educaciones.rows[i].edu_carrera
              label(style='text-align: left; margin-left:5%').label="Fecha de Inicio: "+educaciones.rows[i].edu_fecha_inicio.toLocaleString("en-GB").split(",",1)
              label(style='text-align: left; margin-left:5%').label="Fecha de Finalizacion: "+educaciones.rows[i].edu_fecha_fin.toLocaleString("en-GB").split(",",1)
              

          .row.row-space
            .col-2
            label(style='text-align: center;margin-top: 10%;font-size:25px !important; background-color: #6589de; width:100%').label Trayectoria Laboral en PMC
            -for (var i = 0; i < trayActual.rowCount; ++i)
              label(style='text-align: left; margin-left:5%').label="Empresa: "+trayActual.rows[i].tra_empresa
              label(style='text-align: left; margin-left:5%').label="Fecha de Ingreso: "+trayActual.rows[i].tra_fecha_inicio.toLocaleString("en-GB").split(",",1)
              label(style='text-align: left; margin-left:5%').label="Cargo: "+trayActual.rows[i].car_cargo                

          .row.row-space
            .col-2
            label(style='text-align: center;margin-top: 10%;font-size:25px !important; background-color: #6589de; width:100%').label Trayectoria Laboral Exterior
            -for (var i = 0; i < trayAnterior.rowCount; ++i)
              label(style='text-align: left; margin-left:5%').label="Empresa: "+trayAnterior.rows[i].tra_empresa
              label(style='text-align: left; margin-left:5%').label="Fecha de Ingreso: "+trayAnterior.rows[i].tra_fecha_inicio.toLocaleString("en-GB").split(",",1)
              if(trayAnterior.rows[i].tra_fecha_fin!=null)
                label(style='text-align: left; margin-left:5%').label="Fecha de Egreso: "+trayAnterior.rows[i].tra_fecha_fin.toLocaleString("en-GB").split(",",1)
              label(style='text-align: left; margin-left:5%').label="Cargo: "+trayAnterior.rows[i].car_cargo
                   

          .row.row-space
            .col-2
            label(style='text-align: center;margin-top: 10%;font-size:25px !important; background-color: #6589de; width:100%').label Capacitacion Recibida
            -for (var i = 0; i < capacitaciones.rowCount; ++i)
              label(style='text-align: left; margin-left:5%').label="Curso: "+capacitaciones.rows[i].cap_curso
              label(style='text-align: left; margin-left:5%').label="Institucion: "+capacitaciones.rows[i].ins_nombre
              label(style='text-align: left; margin-left:5%').label="Fecha: "+capacitaciones.rows[i].cap_fecha.toLocaleString("en-GB").split(",",1)
              label(style='text-align: left; margin-left:5%').label="Duracion: "+capacitaciones.rows[i].cap_horas+"horas"
          .row.row-space
            .col-2
            label(style='text-align: center;margin-top: 10%;font-size:25px !important; background-color: #6589de; width:100%').label Informacion de Interes
            -for (var i = 0; i < informaciones.rowCount; ++i)
              label(style='text-align: left; margin-left:5%').label="Tipo: "+informaciones.rows[i].inf_tipo
              label(style='text-align: left; margin-left:5%').label="Informacion: "+informaciones.rows[i].inf_per_descripcion
          .row.row-space  
              .text-center.p-t-136
                a.txt2(href='/')
                  |Volver al Dashboard
                  i.fa.fa-long-arrow-right.m-l-5(aria-hidden='true') 
             
