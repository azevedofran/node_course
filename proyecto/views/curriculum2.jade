.page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
  .wrapper.wrapper--w680
    .card.card-4(style='width:110%;')
      .card-body
        h2.title Sintesis Curricular
        form(action="/curriculum",method="POST")
          .row.row-space
            .col-2
              .input-group
                label.label Persona
                .rs-select2.js-select-simple
                  select(name="cedula")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < personas.rowCount; ++i)
                      option=personas.rows[i].per_cedula+' | '+personas.rows[i].per_nombre+' | '+personas.rows[i].per_apellido
                  .select-dropdown
            .col-1
              .p-t-15
                 button.btn.btn--radius-2.btn--blue(type='Submit') Generar
 
            .row.row-space
              .col-2
              label.title Informacion Personal
                -for (var i = 0; i < cuadros.rowCount; ++i)
                  if(cuadros.rows[i].per_nombre2=null)
                     var segNombre="."
                  if(cuadros.rows[i].per_apellido2=null)
                     var segApellido="."  
                  label.label="Nombres y Apellidos: "+cuadros.rows[i].per_nombre+" "+segNombre+" "+cuadros.rows[i].per_apellido+" "+segApellido
                  label.label="C.I.: "+cuadros.rows[i].per_cedula+" Estado Civil: "+cuadros.rows[i].per_edo_civil
                  label.label="Correo: "+cuadros.rows[i].per_correo
                  label.label="Fecha de Nacimiento: "+cuadros.rows[i].per_fecha_nacimiento
                  label.label="Profesion: "+cuadros.rows[i].pro_profesion
                  -for (var i = 0; i < telefonos.rowCount; ++i)
                    label.label="Telefono: ("+telefonos.rows[i].tel_cod_area+") "+telefonos.rows[i].tel_numero+" "+telefonos.rows[i].tel_tipo

          .row.row-space
            .col-2
            label.title Educacion Formal
              -for (var i = 0; i < educaciones.rowCount; ++i)
                label.label="Universidad: "+educaciones.rows[i].edu_universidad
                label.label="Tipo Carrera: "+educaciones.rows[i].edu_tipo
                label.label="Carrera: "+educaciones.rows[i].edu_carrera
                label.label="Fecha de Inicio: "+educaciones.rows[i].edu_fecha_inicio
                label.label="Fecha de Finalizacion: "+educaciones.rows[i].edu_fecha_inicio
              

          .row.row-space
            .col-2
            label.title Trayectoria Laboral en PMC
              -for (var i = 0; i < trayActual.rowCount; ++i)
                label.label="Empresa: "+trayActual.rows[i].tra_empresa
                label.label="Fecha de Ingreso: "+trayActual.rows[i].tra_fecha_inicio
                label.label="Cargo: "+trayActual.rows[i].car_cargo                

          .row.row-space
            .col-2
            label.title Trayectoria Laboral Anterior
              -for (var i = 0; i < trayAnterior.rowCount; ++i)
                label.label="Empresa: "+trayAnterior.rows[i].tra_empresa
                label.label="Fecha de Ingreso: "+trayAnterior.rows[i].tra_fecha_inicio
                label.label="Fecha de Egreso: "+trayAnterior.rows[i].tra_fecha_fin
                label.label="Cargo: "+trayAnterior.rows[i].car_cargo
                   

          .row.row-space
            .col-2
            label.title Capacitacion Recibida
              -for (var i = 0; i < capacitaciones.rowCount; ++i)
                label.label="Curso: "+capacitaciones.rows[i].cap_curso
                label.label="Institucion: "+capacitaciones.rows[i].ins_nombre
                label.label="Fecha: "+capacitaciones.rows[i].cap_fecha
                label.label="Duracion: "+capacitaciones.rows[i].cap_horas+"horas"

                  
          .row.row-space
            .col-2
            label.title Informacion de Interes
              -for (var i = 0; i < informaciones.rowCount; ++i)
                label.label="Tipo: "+informaciones.rows[i].inf_tipo
                label.label="Informacion: "+informaciones.rows[i].inf_per_descripcion
               
             
