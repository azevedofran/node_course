  meta(name='keywords' content='Colorlib Templates')
  // Title Page
  title Persona
  // Icons font CSS
  link(href='../public/vendor2/mdi-font/css/material-design-iconic-font.min.css' rel='stylesheet' media='all')
  link(href='../public/vendor2/font-awesome-4.7/css/font-awesome.min.css' rel='stylesheet' media='all')
