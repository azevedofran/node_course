  link(href='../public/css/main2.css' rel='stylesheet' media='all')
.page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
  .wrapper.wrapper--w680
    .card.card-4(style='width:115%;')
      .card-body
        h2.title Registrar persona

        form( method='POST')
          .row.row-space
            .col-2
              .input-group
                label.label Persona
                .rs-select2.js-select-simple
                  select(name="apr_persona")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < personas.rowCount; ++i)
                      option=personas.rows[i].per_cedula+' | '+personas.rows[i].per_nombre+' | '+personas.rows[i].per_apellido
                  .select-dropdown
              .p-t-15 
            .col-1
              .p-t-15
                 button.btn.btn--radius-2.btn--blue(type='Submit' action="/verPersona") Ver Persona  

        form( method='POST' action="/modificarPersona")
          .row.row-space
            .col-2
              .input-group
                label.label Primer nombre
                input.input--style-4(type='text' name='per_nombre' value='#{selecciones.rows[0].per_nombre}')
            .col-2
              .input-group
                label.label Segundo Nombre
                input.input--style-4(type='text' name='per_nombre2' value='#{selecciones.rows[0].per_nombre2}')
          .row.row-space
            .col-2
              .input-group
                label.label Primer apellido
                input.input--style-4(type='text' name='per_apellido' value='#{selecciones.rows[0].per_apellido}')
            .col-2
              .input-group
                label.label Segundo apellido
                input.input--style-4(type='text' name='per_apellido2' value='#{selecciones.rows[0].per_apellido2}')
          .row.row-space
            .col-2
              .input-group
                label.label Cedula
                input.input--style-4(type='text' name='per_cedula' value='#{selecciones.rows[0].per_cedula}' readonly="readonly")
            
            
            .col-2
              .input-group
                label.label Fecha de nacimiento
                .input-group-icon
                  input.input--style-4.js-datepicker(type='text' name='per_fecha_nacimiento' value='#{selecciones.rows[0].per_fecha_nacimiento.toLocaleString("en-GB").split(",",1)}')
                  i.zmdi.zmdi-calendar-note.input-icon.js-btn-calendar

          .row.row-space
            .col-3
              .input-group
                label.label Correo
                input.input--style-4(type='email' name='per_correo' value='#{selecciones.rows[0].per_correo}')
            .col-2
              .input-group
                label.label Genero
                .rs-select2.js-select-simple.select--no-search
                  select(name="per_genero" value='#{selecciones.rows[0].per_genero}')
                    option(disabled='disabled' selected='selected' name="per_edo_civil")=selecciones.rows[0].per_genero
                    option M
                    option F
                  .select-dropdown

          .row.row-space
            .col-2
              .input-group
                label.label Estado civil
                .rs-select2.js-select-simple.select--no-search
                  select(name="per_edo_civil" value='#{selecciones.rows[0].per_edo_civil}')
                    option(disabled='disabled' selected='selected' name="per_edo_civil")=selecciones.rows[0].per_edo_civil 
                      option S
                      option C
                      option D
                      option V
                      option CB
                  .select-dropdown
            .col-2
              .input-group
                label.label profesion
                .rs-select2.js-select-simple
                  select(name='per_profesion' value='#{selecciones.rows[0].pro_profesion}')
                    option(disabled='disabled' selected='selected')=selecciones.rows[0].pro_profesion
                      -for (var i = 0; i < profesiones.rowCount; ++i)
                        option=profesiones.rows[i].pro_profesion
                  .select-dropdown
          -for (var i = 0; i < selecciones.rowCount/2; ++i)
            .row.row-space
                .col-1
                  .input-group
                    label.label TELEFONO
                    .rs-select2.js-select-simple
                      select(name='tel_tipo')
                        option(disabled='disabled' selected='selected')=selecciones.rows[i].tel_tipo
                        option LOCAL
                        option MOVIL
                      .select-dropdown
                .col-1
                  .input-group
                    label.label  *
                    .rs-select2.js-select-simple.select--no-search
                      select(name='tel_cod_area')
                        option(disabled='disabled' selected='selected')=selecciones.rows[i].tel_cod_area 
                        option 0212
                        option 0412
                        option 0414
                        option 0424
                        option 0416
                        option 0426
                      .select-dropdown
                .col-1
                  .input-group
                    label.label *
                    input.input--style-4(type='tel_numero' name='tel_numero' placeholder="numero" value='#{selecciones.rows[i].tel_numero}')

          .row.row-space
            .col-4
              .input-group
                label.label Direccion
                textarea(style='width:621px; height:64px' name='per_direccion')=selecciones.rows[0].dir_direccion
          
          .row.row-space        
            button.btn.btn--radius-2.btn--blue(type='submit' ) Modificar
              
          
          a.txt2(href='/')
            |Volver al Dashboard
            i(style="color: white").fa.fa-long-arrow-right.m-l-5(aria-hidden='true')






