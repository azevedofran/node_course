.page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
  .wrapper.wrapper--w680
    .card.card-4
      .card-body
        h2.title Educacion
        form(action="/educacion",method="POST")
          .row.row-space
            .col-2
              .input-group
                label(style='text-align: left').label Persona
                .rs-select2.js-select-simple
                  select(name="cap_persona")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < personas.rowCount; ++i)
                      option=personas.rows[i].per_cedula+' | '+personas.rows[i].per_nombre+' | '+personas.rows[i].per_apellido
                  .select-dropdown
              .p-t-15

            .col-2
              .input-group
                label(style='text-align: left').label Universidad
                .rs-select2.js-select-simple
                  select(name="cap_institucion" type="text")#sel1.form-control
                    option(disabled='disabled' selected='selected') Seleccionar
                    -for (var i = 0; i < universidades.rowCount; ++i)
                      option=universidades.rows[i].uni_nombre
                  .select-dropdown
              .p-t-15

          .row.row-space
            .col-2
                .input-group
                  label(style='text-align: left').label Tipo de Carrera
                  .rs-select2.js-select-simple
                    select(name="cap_curso")
                      option(disabled='disabled' selected='selected') Seleccione 
                      option Universitario Pregrado Carrera Larga
                      option Universitario Pregrado Carrera Corta
                      option Especializacion
                      option Postgrado
                      option Diplomado
              
                    .select-dropdown
            .col-2
              .input-group
                label(style='text-align: left').label Carrera
                input.input--style-4(type='text' name='cap_descripcion')
            
          .row.row-space
            .col-2
              .input-group
                label(style='text-align: left').label Fecha de Inicio
                .input-group-icon
                  input.input--style-4.js-datepicker(type='text' name='cap_fecha')
                  i.zmdi.zmdi-calendar-note.input-icon.js-btn-calendar
            .col-2
              .input-group
                label(style='text-align: left').label Fecha de Fin
                .input-group-icon
                  input.input--style-4.js-datepicker(type='text' name='cap_fecha_fin')
                  i.zmdi.zmdi-calendar-note.input-icon.js-btn-calendar

          .p-t-15
            button.btn.btn--radius-2.btn--blue(type='Agregar') Agregar


