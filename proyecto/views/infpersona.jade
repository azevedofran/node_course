extends ./layout.jade
block contenido

    
      

 
    form(action="/infpersona",method="POST")
      
      div(class="form-group")
        label(for="inf_per_persona") Cedula
          select(name="cedula")#sel1.form-control
            -for (var i = 0; i < personas.rowCount; ++i)
              option=personas.rows[i].per_cedula


      div(class="form-group")
        label(for="inf_per_informacion") Tipo de Informacion
          select(name="informacion")#sel1.form-control
            -for (var i = 0; i < informaciones.rowCount; ++i)
              option=informaciones.rows[i].inf_id
              
      div(class="form-group")
          label(for="inf_per_descripcion") Descripcion
          input(type="text", name="inf_per_descripcion", placeholder="Descripcion",id="inf_per_descripcion",class="form-control form-control-lg border-left-0")
      
      div
        center: input(type="submit" value="Guardar" class="btn btn-info")