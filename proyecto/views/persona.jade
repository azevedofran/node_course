extends ./layout.jade
block contenido

          .container
            form(action="/persona",method="POST")
              .form-inline
                  div(class="form-group")
                  label(for="per_cedula") Cedula
                  input(type="text", name="per_cedula", placeholder="Cedula",id="per_cedula",class="form-control form-control-lg border-left-0")
    
                div(class="form-group")
                  label(for="per_nombre") Nombre
                  input(type="text", name="per_nombre", placeholder="Nombre",id="per_nombre",class="form-control form-control-lg border-left-0")

                div(class="form-group")
                  label(for="per_nombre2") Segundo Nombre
                  input(type="text", name="per_nombre2", placeholder="Segundo Nombre",id="per_nombre2",class="form-control form-control-lg border-left-0")
              
              .form-inline 
                div(class="form-group")
                  label(for="per_apellido") Apellido
                  input(type="text", name="per_apellido", placeholder="Apellido",id="per_apellido",class="form-control form-control-lg border-left-0")

                div(class="form-group")
                  label(for="per_apellido2") Segundo Apellido
                  input(type="text", name="per_apellido2", placeholder="Segundo Apellido",id="per_apellido2",class="form-control form-control-lg border-left-0")
              .form-inline 
                div(class="form-group")
                  label(for="per_fecha_nacimiento") Fecha de Nacimiento
                  input(type="text", name="per_fecha_nacimiento", placeholder="yyyy-mm-dd",id="per_fecha_nacimiento",class="form-control form-control-lg border-left-0")
              .form-inline 
                div(class="form-group")
                  label(for="per_edo_civil") Edo Civil
                  select(name="per_edo_civil")#sel1.form-control
                    option S
                    option C
                    option D
                    option V
                    option CB

                div(class="form-group")
                  label(for="per_correo") Correo Electronico
                  input(type="text", name="per_correo", placeholder="Correo Electronico",id="per_correo",class="form-control form-control-lg border-left-0")
              .form-inline 
                div(class="form-group")
                  label(for="per_genero") Genero
                  select(name="per_genero")#sel1.form-control
                    option F
                    option M

                div(class="form-group")
                  label(for="per_profesion") Profesion
                  select(name="per_profesion")#sel1.form-control
                    -for (var i = 0; i < profesiones.rowCount; ++i)
                      option=profesiones.rows[i].pro_id

              .form-inline 
                div(class="form-group")
                  label(for="direccion") Direccion
                  input(type="text", name="direccion", placeholder="Direccion",id="direccion",class="form-control form-control-lg border-left-0")

                div(class="form-group")
                  label(for="telefono") Telefono
                  select(name="tel_tipo")#sel1.form-control
                    option LOCAL
                    option MOVIL

                  select(name="tel_cod_area")#sel1.form-control
                    option 0212
                    option 0412
                    option 0414
                    option 0424
                    option 0416
                    option 0426


                  input(type="telefono", name="tel_numero", placeholder="Telefono",id="tel_numero",class="form-control form-control-lg border-left-0")

              div
                center: input(type="submit" value="Guardar" class="btn btn-info")